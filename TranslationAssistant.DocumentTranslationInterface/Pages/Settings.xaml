<UserControl x:Class="TranslationAssistant.DocumentTranslationInterface.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Content/Account.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Account" Source="/Content/Account.xaml" />
                <mui:Link DisplayName="Custom Languages" Source="/Content/CustomLanguages.xaml" />
                <mui:Link DisplayName="Appearance" Source="/Content/SettingsAppearance.xaml" />
                <mui:Link DisplayName="About" Source="/Content/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>